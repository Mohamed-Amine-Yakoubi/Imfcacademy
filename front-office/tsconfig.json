{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/ui/modal/index.jsx", "src/hooks/useModal.jsx", "next.config.js", "src/components/form/Select.jsx", "src/components/auth/SignInForm.jsx", "src/components/form/input/InputField.jsx", "src/components/form/form-elements/DefaultInputs.jsx"],
  "exclude": ["node_modules"]
}
